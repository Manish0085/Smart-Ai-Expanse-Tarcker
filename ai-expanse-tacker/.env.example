# Server Config
SERVER_PORT=8081
ALLOWED_ORIGINS=http://localhost:5173

# ─────────────────────────────────────────────────────────────
# Supabase PostgreSQL Config
# Go to: https://supabase.com/dashboard → Project → Settings → Database
# Copy the JDBC connection string from the "URI" tab
# Format: jdbc:postgresql://db.<project-ref>.supabase.co:5432/postgres?sslmode=require
# ─────────────────────────────────────────────────────────────
DB_URL=jdbc:postgresql://db.<your-project-ref>.supabase.co:5432/postgres?sslmode=require
DB_USERNAME=postgres
DB_PASSWORD=<your-supabase-db-password>

# Mail Config (Brevo SMTP or any provider)
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USER=<your-brevo-smtp-user>
MAIL_PASS=<your-brevo-smtp-key>
MAIL_FROM=<your-sender-email>

# AI Config (OpenRouter)
OPENROUTER_API_KEY=<your-openrouter-api-key>
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=mistralai/mistral-7b-instruct
