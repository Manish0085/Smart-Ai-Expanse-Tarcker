pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "ai-expense-tracker-frontend"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Build') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying frontend to static hosting/CDN...'
                // Add deployment logic here
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
